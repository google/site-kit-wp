{
  "extends": [
    "plugin:@wordpress/eslint-plugin/recommended",
    "plugin:jest/recommended"
  ],
  "env": {
    "browser": true,
    "es6": true
  },
  "settings": {
    "react": {
      "version": "16.2.0"
    }
  },
  "globals": {
    "React": "readonly",
    "googlesitekit": "readonly",
    "googlesitekitAdminbar": "readonly",
    "googlesitekitDashboard": "readonly",
    "googlesitekitSettings": "readonly",
    "lodash": "readonly",
    "googlesitekitCurrentModule": "readonly",
    "gtag": "readonly",
    "process": "readonly"
  },
  "rules": {
    "no-restricted-globals": [
      "error",
      {
        "name": "window",
        "message": "Use 'global' instead."
      }
    ],
    "valid-jsdoc": "warn"
  },
  "overrides": [
    {
      "files": [
        "tests/e2e/**/*.js"
      ],
      "env": {
        "browser": true
      },
      "globals": {
        "browser": true,
        "page": true,
        "wp": true
      },
      "rules": {
        "no-restricted-globals": [
          "off"
        ],
      }
    },
    {
      "files": [
        "stories/**/*.js"
      ],
      "globals": {
        "window": false
      },
      "rules": {
        "no-restricted-globals": [
          "off"
        ]
      }
    }
  ]
}
