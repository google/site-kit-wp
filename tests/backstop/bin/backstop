BIN_DIR=$(cd -- "$(dirname -- "${BASH_SOURCE[0]}")" &> /dev/null && pwd)
ROOT_DIR="$(dirname "$BIN_DIR")/../../"

VERSION=6.1.1

# Change the suffix version of the tag every time the backstop image is changed.
# This is needed to avoid Docker caching the image, so everyone will get the latest version.
# The suffix version should be a date in YYYYMMDD format.
# The date should be the date of the last change to the backstop image.
IMAGE=googlesitekit/vrt:$VERSION-20250424

# Build the backstopjs image if it doesn't exist.
if [[ "$(docker images -q $IMAGE 2> /dev/null)" == "" ]]; then
	docker build \
		--pull \
		--tag $IMAGE \
		--build-arg BACKSTOPJS_VERSION=$VERSION \
		"$ROOT_DIR/tests/backstop"
fi

# Run the backstopjs command.
docker run --rm --tty \
	--shm-size=512m \
	--mount "type=bind,source=$ROOT_DIR,target=/src" \
	$IMAGE \
	"$@" \
	--config=/src/tests/backstop/config.js

DOCKER_EXIT_CODE=$?

# Display a link to the report only after the "test" command.
if [ "$1" == "test" ]; then
	echo ""
	echo "To view the report, open this URL in your browser:"
	echo "file://$ROOT_DIR/tests/backstop/html_report/index.html"
fi

exit $DOCKER_EXIT_CODE
