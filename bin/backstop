BIN_DIR=$(cd -- "$(dirname -- "${BASH_SOURCE[0]}")" &> /dev/null && pwd)
ROOT_DIR=$(dirname "$BIN_DIR")

VERSION=6.1.1
IMAGE=googlesitekit/vrt:$VERSION
COMMAND=$1

# Build the backstopjs image if it doesn't exist yet.
docker image inspect $IMAGE --format "{{.Id}}" >/dev/null 2>&1 ||
	docker build --tag $IMAGE \
		--build-arg BACKSTOPJS_VERSION=$VERSION \
		"$ROOT_DIR/docker/backstopjs"

# Run the backstopjs command.
docker run --rm --tty \
	--shm-size=512m \
	--mount "type=bind,source=$ROOT_DIR',target=/src" \
	$IMAGE \
	"$COMMAND" \
	--config=/src/tests/backstop/config.js

DOCKER_EXIT_CODE=$?

# Display a link to the report only after the "test" command.
if [ "$1" == "test" ]; then
	echo ""
	echo "To see the VRT report open this URL in your browser: file://$ROOT_DIR/tests/backstop/html_report/index.html"
fi

exit $DOCKER_EXIT_CODE
